<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustodeViagem.MainPage"
             Title="Informações sobre a Viagem">

    <ScrollView>
        <StackLayout>

            <Label Text="Origem:" />
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino:" />
            <Entry BindingContext="destino" x:Name="txt_destino" />

            <Label Text="Distância:" />
            <Entry BindingContext="distancia" x:Name="txt_distancia" />

            <Label Text="Rendimento:" />
            <Entry BindingContext="rendimento" x:Name="txt_rendimento" />

            <Label Text="Preço do Combustível:" />
            <Entry BindingContext="valor_C" x:Name="txt_combustivel" />

            <Button Margin="3, 20, 3, 3" x:Name="btn_createPedagio" Text="Adicionar pedagio" Clicked="btn_createPedagio_Clicked" BackgroundColor="#4361ee"/>
            <Button Margin="3" x:Name="btn_listPedagio" Text="Lista pedagio" Clicked="btn_listPedagio_Clicked" BackgroundColor="#4361ee"/>
            <Button Margin="3" x:Name="btn_calcular" Text="Calcular" Clicked="btn_calcular_Clicked" BackgroundColor="#4361ee"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
