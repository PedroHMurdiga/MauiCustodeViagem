<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustodeViagem.Views.AdicionarPedagio"
             Title="AdicionarPedagio">
    
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Local: "/>
            <Entry BindingContext="local" x:Name="txt_local"/>

            <Label Text="Valor: "/>
            <Entry BindingContext="valor"  x:Name="txt_valor" />

            <Button Text="Adicionar" Margin="3, 20, 0, 0" x:Name="btn_enviar" Clicked="btn_enviar_Clicked" BackgroundColor="#4361ee"/>

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>